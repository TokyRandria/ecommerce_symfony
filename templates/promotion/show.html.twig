{% extends 'base.html.twig' %}

{% block title %}Promotion{% endblock %}

{% block body %}
    <h1>Promotion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
            <tr>
                <th>DebutPromo</th>
                <td>{{ promotion.debutPromo ? promotion.debutPromo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FinPromo</th>
                <td>{{ promotion.finPromo ? promotion.finPromo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ promotion.description }}</td>
            </tr>
            <tr>
                <th>QuantiteEnpromo</th>
                <td>{{ promotion.quantiteEnpromo }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ promotion.titre }}</td>
            </tr>
            <tr>
                <th>EstEnAvant</th>
                <td>{{ promotion.estEnAvant ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PhotoRep</th>
                <td>{{ promotion.photoRep }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_promotion_index') }}">back to list</a>

    <a href="{{ path('app_promotion_edit', {'id': promotion.id}) }}">edit</a>

    {{ include('promotion/_delete_form.html.twig') }}
{% endblock %}
