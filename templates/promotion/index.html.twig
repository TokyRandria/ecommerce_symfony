{% extends 'base.html.twig' %}

{% block title %}Promotion index{% endblock %}

{% block body %}
    <h1>Promotion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DebutPromo</th>
                <th>FinPromo</th>
                <th>Description</th>
                <th>QuantiteEnpromo</th>
                <th>Titre</th>
                <th>EstEnAvant</th>
                <th>PhotoRep</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.debutPromo ? promotion.debutPromo|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.finPromo ? promotion.finPromo|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ promotion.description }}</td>
                <td>{{ promotion.quantiteEnpromo }}</td>
                <td>{{ promotion.titre }}</td>
                <td>{{ promotion.estEnAvant ? 'Yes' : 'No' }}</td>
                <td>{{ promotion.photoRep }}</td>
                <td>
                    <a href="{{ path('app_promotion_show', {'id': promotion.id}) }}">show</a>
                    <a href="{{ path('app_promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_promotion_new') }}">Create new</a>
{% endblock %}
