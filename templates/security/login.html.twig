{% extends 'base.html.twig' %}

{% block title %}Connexion générale{% endblock %}

{% block body %}
<section>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">se déconnecter</a>
        </div>
    {% endif %}
    <div class="con">
        <header class="head-form">
             <h2>Connexion</h2>
            <h1 class="h3 mb-3 font-weight-normal">Entrez vos informations que connexion</h1>
        </header>    
            <div class="field-set">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <span class="input-item">
                <i class="fa fa-key"></i>
                <br>
                </span>  
                <span>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <i class="fa fa-eye" aria-hidden="true"  type="button" id="eye"></i>
                </span>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <br>
                <button class="valider" type="submit">
                    se connecter
                </button>
             </div>   
            </br>
            </div> 
        
        {#<a href="{{ path('app_register') }}" class="btn btn-secondary mt-3">M'inscrire
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        </a>#}
</form>
</section>
{% endblock %}
